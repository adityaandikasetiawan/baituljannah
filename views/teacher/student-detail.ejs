<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> - Baitul Jannah School</title>
<link rel="shortcut icon" href="/assets/img/logo.webp">
  <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/plugins/fontawesome/css/fontawesome.min.css">
  <link rel="stylesheet" href="/assets/plugins/fontawesome/css/all.min.css">
  <link rel="stylesheet" href="/assets/css/iconsax.css">
  <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
  <div class="main-wrapper">
    <%- include('../partials/header', { extraHeaderClass: 'header-teacher' }) %>
    <div class="breadcrumb-bar text-center">
      <div class="container">
        <h2 class="breadcrumb-title mb-2">Detail Siswa</h2>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/teacher/students">Siswa</a></li>
            <li class="breadcrumb-item active"><%= student.full_name %></li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="content">
      <div class="container">
        <div class="row">
          <div class="col-lg-3 theiaStickySidebar">
            <%- include('../partials/sidebar-teacher') %>
          </div>
          <div class="col-lg-9">
            <div class="card mb-4">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <img src="<%= student.avatar || '/assets/img/user/user-03.jpg' %>" class="rounded-circle me-3" alt="Avatar" width="64" height="64">
                  <div>
                    <h5 class="mb-1"><%= student.full_name %></h5>
                    <small class="text-muted">NIS: <%= student.student_id %></small>
                    <div class="small text-muted">Email: <%= student.email %> &middot; Tel: <%= student.phone || '-' %></div>
                    <div class="small text-muted">Alamat: <%= student.address || '-' %></div>
                  </div>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h6 class="mb-0">Nilai</h6>
              <a class="btn btn-primary btn-sm" href="/teacher/students/<%= student.id %>/grades/add"><i class="fa-solid fa-plus me-1"></i>Tambah Nilai</a>
            </div>
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th>Mata Pelajaran</th>
                        <th>Semester</th>
                        <th>Nilai</th>
                        <th>Guru</th>
                        <th>Keterangan</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (grades && grades.length) { %>
                        <% grades.forEach(function(g) { %>
                          <tr>
                            <td><%= g.subject %></td>
                            <td><%= g.semester %></td>
                            <td><span class="badge bg-<%= g.grade >= 80 ? 'success' : g.grade >= 70 ? 'warning' : 'danger' %>"><%= g.grade %></span></td>
                            <td><%= g.teacher_name %></td>
                            <td><%= g.remarks || '-' %></td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr><td colspan="5" class="text-center text-muted">Belum ada data nilai.</td></tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer') %>
  </div>
  <script src="/assets/js/jquery-3.7.1.min.js"></script>
  <script src="/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>