<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> - <%= appName %></title>
  <link rel="shortcut icon" href="/assets/img/logo.webp">
  <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/plugins/fontawesome/css/fontawesome.min.css">
  <link rel="stylesheet" href="/assets/plugins/fontawesome/css/all.min.css">
  <link rel="stylesheet" href="/assets/css/iconsax.css">
  <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
  <div class="main-wrapper">
    <%- include('../partials/header', { extraHeaderClass: 'mb-3' }) %>

    <div class="breadcrumb-bar text-center">
      <div class="container">
        <h2 class="breadcrumb-title mb-2">Prestasi</h2>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Prestasi</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="content">
      <div class="container">
        <div class="row">
          <% if (achievements && achievements.length) { %>
            <% achievements.forEach(a => { %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <% const achImgSrc = a.image || '/assets/img/blog/blog-33.jpg'; const achIsUpload = achImgSrc && achImgSrc.startsWith('/uploads/'); const achBaseNoExt = achIsUpload ? achImgSrc.replace(/\.(jpg|jpeg|png)$/i, '') : null; const achWebpSrc = achBaseNoExt ? achBaseNoExt + '.webp' : null; %>
                <picture>
                  <% if (achWebpSrc) { %>
                  <source type="image/webp" srcset="<%= achBaseNoExt %>-320.webp 320w, <%= achBaseNoExt %>-640.webp 640w, <%= achBaseNoExt %>-1024.webp 1024w, <%= achBaseNoExt %>-1600.webp 1600w" sizes="(min-width: 1200px) 33vw, (min-width: 768px) 50vw, 100vw">
                  <% } %>
                  <img src="<%= achImgSrc %>" class="card-img-top" alt="<%= a.title %>" loading="lazy" decoding="async">
                </picture>
                <div class="card-body">
                  <span class="badge bg-primary mb-2"><%= a.category || 'Prestasi' %></span>
                  <h5 class="card-title"><%= a.title %></h5>
                  <% if (a.student_name) { %>
                    <p class="mb-1"><i class="isax isax-user me-2 text-primary"></i><%= a.student_name %></p>
                  <% } %>
                  <p class="text-muted"><i class="isax isax-calendar-1 me-2 text-primary"></i><%= new Date(a.achievement_date).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                  <% if (a.description) { %>
                  <p><%= a.description %></p>
                  <% } %>
                </div>
              </div>
            </div>
            <% }) %>
          <% } else { %>
            <div class="col-12 text-center py-5">
        <img src="/assets/img/error/error-03.svg" class="img-fluid mb-4" style="max-width: 300px;" alt="No Achievements" loading="lazy" decoding="async">
              <h4>Belum Ada Prestasi</h4>
              <p class="text-muted">Saat ini belum ada data prestasi yang ditampilkan.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>
  </div>

  <script src="/assets/js/jquery-3.7.1.min.js"></script>
  <script src="/assets/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/script.js"></script>
</body>
</html>