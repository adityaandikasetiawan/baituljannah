<!DOCTYPE html>
<html lang="id" data-bs-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= news.title %> - Baitul Jannah School</title>
  <link rel="shortcut icon" href="/assets/img/logo.webp">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/iconsax.css">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <div class="main-wrapper">
        <!-- Header -->
        <%- include('../partials/header', { extraHeaderClass: 'mb-3' }) %>

        <!-- Breadcrumb -->
        <div class="breadcrumb-bar text-center">
            <div class="container">
                <h2 class="breadcrumb-title mb-2"><%= news.title %></h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center mb-0">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/news">Berita</a></li>
                        <li class="breadcrumb-item active"><%= news.title %></li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Content -->
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-body">
                                <% const detailImgSrc = news.image || '/assets/img/blog/blog-31.jpg'; const detailIsUpload = detailImgSrc && detailImgSrc.startsWith('/uploads/'); const detailBaseNoExt = detailIsUpload ? detailImgSrc.replace(/\.(jpg|jpeg|png)$/i, '') : null; const detailWebpSrc = detailBaseNoExt ? detailBaseNoExt + '.webp' : null; %>
                                <picture>
                                    <% if (detailWebpSrc) { %>
                                    <source type="image/webp" srcset="<%= detailBaseNoExt %>-640.webp 640w, <%= detailBaseNoExt %>-1024.webp 1024w, <%= detailBaseNoExt %>-1600.webp 1600w" sizes="(min-width: 992px) 66vw, 100vw">
                                    <% } %>
                                    <img src="<%= detailImgSrc %>" class="img-fluid rounded mb-4" alt="<%= news.title %>">
                                </picture>
                                
                                <div class="d-flex align-items-center mb-3">
                                    <span class="badge bg-primary me-2"><%= news.category %></span>
                                    <span class="text-muted"><i class="fa-regular fa-clock me-1"></i><%= new Date(news.published_date).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                                    <span class="text-muted ms-3"><i class="fa-regular fa-user me-1"></i><%= news.author_name %></span>
                                    <span class="text-muted ms-3"><i class="fa-regular fa-eye me-1"></i><%= news.views %> views</span>
                                </div>

                                <h1 class="mb-4"><%= news.title %></h1>

                                <div class="blog-content">
                                    <%- news.content.replace(/\n/g, '<br>') %>
                                </div>

                                <hr class="my-4">

                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>Bagikan:</strong>
                                        <a href="https://www.facebook.com/sharer/sharer.php?u=<%= appName %>/news/<%= news.slug %>" target="_blank" class="btn btn-sm btn-primary ms-2">
                                            <i class="fab fa-facebook-f"></i>
                                        </a>
                                        <a href="https://twitter.com/intent/tweet?url=<%= appName %>/news/<%= news.slug %>&text=<%= news.title %>" target="_blank" class="btn btn-sm btn-info ms-2">
                                            <i class="fab fa-twitter"></i>
                                        </a>
                                        <a href="https://wa.me/?text=<%= news.title %> <%= appName %>/news/<%= news.slug %>" target="_blank" class="btn btn-sm btn-success ms-2">
                                            <i class="fab fa-whatsapp"></i>
                                        </a>
                                    </div>
                                    <a href="/news" class="btn btn-secondary">
                                        <i class="fa-solid fa-arrow-left me-2"></i>Kembali ke Berita
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <!-- Related News -->
                        <% if (relatedNews && relatedNews.length > 0) { %>
                        <div class="card">
                            <div class="card-body">
                                <h5 class="mb-3 border-bottom pb-3">Berita Terkait</h5>
                                <% relatedNews.forEach(related => { %>
                                <div class="d-flex mb-3 pb-3 border-bottom">
                                    <% if (related.image) { %>
                                        <% const relImgSrc = related.image; const relIsUpload = relImgSrc && relImgSrc.startsWith('/uploads/'); const relWebpSrc = relIsUpload ? relImgSrc.replace(/\.(jpg|jpeg|png)$/i, '.webp') : null; %>
                                        <picture class="me-3" style="width: 80px; height: 80px; display: inline-block;">
                                            <% if (relWebpSrc) { const relBaseNoExt = relImgSrc.replace(/\.(jpg|jpeg|png)$/i, ''); %>
                                            <source type="image/webp" srcset="<%= relBaseNoExt %>-320.webp 320w, <%= relBaseNoExt %>-640.webp 640w" sizes="80px">
                                            <% } %>
                                            <img src="<%= relImgSrc %>" class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover;" alt="<%= related.title %>" loading="lazy" decoding="async" width="80" height="80">
                                        </picture>
                                    <% } %>
                                    <div>
                                        <h6 class="mb-1"><a href="/news/<%= related.slug %>"><%= related.title %></a></h6>
                                        <small class="text-muted"><%= new Date(related.published_date).toLocaleDateString('id-ID') %></small>
                                    </div>
                                </div>
                                <% }); %>
                            </div>
                        </div>
                        <% } %>

                        <!-- Categories -->
                        <div class="card mt-4">
                            <div class="card-body">
                                <h5 class="mb-3 border-bottom pb-3">Kategori</h5>
                                <div class="d-flex flex-wrap gap-2">
                                    <a href="/news?category=Akademik" class="badge bg-primary">Akademik</a>
                                    <a href="/news?category=Prestasi" class="badge bg-success">Prestasi</a>
                                    <a href="/news?category=Kegiatan" class="badge bg-info">Kegiatan</a>
                                    <a href="/news?category=Program" class="badge bg-warning">Program</a>
                                    <a href="/news?category=Pengumuman" class="badge bg-danger">Pengumuman</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <%- include('../partials/footer') %>
    </div>

    <script src="/assets/js/jquery-3.7.1.min.js"></script>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/script.js"></script>
</body>
</html>
