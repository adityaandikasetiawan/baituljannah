<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> - Admin</title>
  <link rel="shortcut icon" href="/assets/img/logo.webp">
  <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/plugins/fontawesome/css/fontawesome.min.css">
  <link rel="stylesheet" href="/assets/plugins/fontawesome/css/all.min.css">
  <link rel="stylesheet" href="/assets/css/iconsax.css">
  <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
  <div class="main-wrapper">
    <%- include('../../partials/header') %>
    <div class="breadcrumb-bar text-center">
      <div class="container">
        <h2 class="breadcrumb-title mb-2">Kelola E-Bulletin</h2>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">E-Bulletin</li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="content">
      <div class="container">
        <div class="row">
          <div class="col-lg-3 theiaStickySidebar">
            <%- include('../../partials/sidebar-admin') %>
          </div>
          <div class="col-lg-9">
            <% if (success) { %><div class="alert alert-success"><%= success %></div><% } %>
            <% if (error) { %><div class="alert alert-danger"><%= error %></div><% } %>
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h6 class="mb-0">Daftar E-Bulletin</h6>
              <a class="btn btn-primary" href="/admin/bulletins/add"><i class="fa-solid fa-plus me-1"></i>Upload Bulletin</a>
            </div>
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Judul</th>
                        <th>Deskripsi</th>
                        <th>Tanggal Terbit</th>
                        <th>File</th>
                        <th>Uploader</th>
                        <th>Aksi</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (bulletins && bulletins.length) { %>
                        <% bulletins.forEach(function(b) { %>
                          <tr>
                            <td><%= b.title %></td>
                            <td><%= b.description || '-' %></td>
                            <td><%= b.published_date ? new Date(b.published_date).toLocaleDateString('id-ID') : '-' %></td>
                            <td>
                              <% if (b.file_path) { %>
                                <a href="<%= b.file_path %>" target="_blank" class="btn btn-sm btn-secondary">Lihat</a>
                              <% } else { %>
                                <span class="text-muted">-</span>
                              <% } %>
                            </td>
                            <td><%= b.uploader_name %></td>
                            <td>
                              <form action="/admin/bulletins/<%= b.id %>/delete" method="post" class="d-inline" onsubmit="return confirm('Hapus bulletin ini?')">
                                <button type="submit" class="btn btn-sm btn-danger">Hapus</button>
                              </form>
                            </td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr><td colspan="6" class="text-center text-muted">Tidak ada bulletin.</td></tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
 <%- include('../../partials/footer') %>
  </div>
  <script src="/assets/js/jquery-3.7.1.min.js"></script>
  <script src="/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>