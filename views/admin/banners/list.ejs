<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> - Admin</title>
  <link rel="shortcut icon" href="/assets/img/logo.webp">
  <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/plugins/fontawesome/css/fontawesome.min.css">
  <link rel="stylesheet" href="/assets/plugins/fontawesome/css/all.min.css">
  <link rel="stylesheet" href="/assets/css/iconsax.css">
  <link rel="stylesheet" href="/assets/css/style.css">
  <style>
    .banner-thumb{height:160px;object-fit:cover;border-radius:.5rem}
  </style>
  </head>
<body>
  <div class="main-wrapper">
    <%- include('../../partials/header') %>
    <div class="breadcrumb-bar text-center">
      <div class="container">
        <h2 class="breadcrumb-title mb-2">Kelola Banner Beranda</h2>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Banner Beranda</li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="content">
      <div class="container">
        <div class="row">
          <div class="col-lg-3 theiaStickySidebar">
            <%- include('../../partials/sidebar-admin') %>
          </div>
          <div class="col-lg-9">
            <% if (success) { %><div class="alert alert-success"><%= success %></div><% } %>
            <% if (error) { %><div class="alert alert-danger"><%= error %></div><% } %>
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h6 class="mb-0">Daftar Banner</h6>
              <a class="btn btn-primary" href="/admin/banners/add"><i class="fa-solid fa-plus me-1"></i>Tambah Banner</a>
            </div>
            <div class="row">
              <% if (banners && banners.length) { %>
                <% banners.forEach(function(b) { %>
                  <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100">
                      <img src="<%= b.image %>" class="card-img-top banner-thumb" alt="<%= b.title || 'Banner' %>">
                      <div class="card-body">
                        <h6 class="card-title"><%= b.title || 'Tanpa Judul' %></h6>
                        <% if (b.subtitle) { %><p class="card-text small text-muted"><%= b.subtitle %></p><% } %>
                        <% if (b.link) { %><p class="small"><a href="<%= b.link %>" target="_blank">Link</a></p><% } %>
                        <div class="d-flex justify-content-between align-items-center">
                          <span class="badge <%= b.status==='active' ? 'bg-success' : 'bg-secondary' %>">#<%= b.order_index %> - <%= b.status %></span>
                          <div class="d-flex gap-2">
                            <a href="/admin/banners/<%= b.id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
                            <form action="/admin/banners/<%= b.id %>/delete" method="post" onsubmit="return confirm('Hapus banner ini?')">
                              <button type="submit" class="btn btn-sm btn-danger">Hapus</button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <div class="col-12"><p class="text-muted">Belum ada banner. Tambahkan hingga 3 banner untuk carousel beranda.</p></div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </div>
  <script src="/assets/js/jquery-3.7.1.min.js"></script>
  <script src="/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>